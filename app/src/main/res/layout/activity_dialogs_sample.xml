<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:context=".dialogssample.DialogsSampleActivity">

    <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogsSampleActivity_btn_simple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show simple dialog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"
            />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogsSampleActivity_btn_simpleImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show simple dialog with image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogsSampleActivity_btn_webView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show dialog with webview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            />

</androidx.constraintlayout.widget.ConstraintLayout>