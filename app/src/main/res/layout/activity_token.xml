<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".generateOtp.ui.TokenActivity">


    <ProgressBar
        android:id="@+id/progress_circular_token"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="?android:progressBarStyleHorizontal"
        android:max="60"
        android:rotation="-90"
        android:progress="100"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:progressDrawable="@drawable/circle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tu_token_digital_es"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_token"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txt_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/here_your_token"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="54sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txt_token_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expires_en_xx_seg"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_token"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>